    "#Triangle\n",
    "a,b,c = input(\"\").split()\n",
    "a = float(a)\n",
    "b = float(b)\n",
    "c = float(c)\n",
    "if a+b>c and b+c>a and c+a>b:\n",
    "    perimeter = a+b+c\n",
    "    print(\"Perimetro = \",end=\"\")\n",
    "    print(format(perimeter,\".1f\"))\n",
    "else:\n",
    "    area = (1/2)*(a+b)*c\n",
    "    print(f\"Area = {area:0.1f}\")"
   ]
